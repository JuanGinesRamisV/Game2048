<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    android:orientation="horizontal"
    tools:context=".Game">

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2048"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="@dimen/title"/>

    <GridLayout
        android:id="@+id/gridMaxScore"
        android:layout_below="@id/gameTitle"
        android:layout_toEndOf="@id/gridCurrentScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:rowCount="2"
        android:background="@color/backGroundTable">

        <TextView
            android:id="@+id/bestText"
            android:text="best"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/bestScoreNumber"
            android:text="343"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>
    </GridLayout>

    <GridLayout
        android:id="@+id/gridCurrentScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="2"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/gridMaxScore"
        android:layout_marginEnd="10dp"
        android:background="@color/backGroundTable">

        <TextView
            android:id="@+id/currentScoreText"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:text="SCORE"/>

        <TextView
            android:id="@+id/currentScoreNumber"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="0"/>

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </GridLayout>

    <GridLayout
        android:id="@+id/board2048"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:rowCount="4"
        android:columnCount="4"
        android:background="@color/backGroundTable">

        <TextView
            android:id="@+id/textView1"
            style="@style/tileStyle" />

        <TextView
            android:id="@+id/textView2"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView3"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView4"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView5"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView6"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView7"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView8"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView9"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView10"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView11"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView12"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView13"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView14"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView15"
            style="@style/tileStyle"/>

        <TextView
            android:id="@+id/textView16"
            style="@style/tileStyle"/>
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/board2048"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="viewEnd"
        android:text="Created by Juan Gines Ramis Vivancos"/>
</RelativeLayout>